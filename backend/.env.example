# Database
DATABASE_URL=postgresql://user:password@localhost:5432/webguard
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
FRONTEND_DIST_PATH=../frontend/dist

# Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=7d
BCRYPT_ROUNDS=12

# Scheduler
SCHEDULER_POLL_INTERVAL_SECONDS=60
SCHEDULER_MAX_TASKS_PER_POLL=100
SCHEDULER_GRACEFUL_SHUTDOWN_TIMEOUT_SECS=30

# Workers
WORKER_POOL_SIZE=10
WORKER_TASK_TIMEOUT_SECS=300
WORKER_MAX_RETRIES=3

# Monitoring Defaults
DEFAULT_UPTIME_FREQUENCY_SECONDS=60
DEFAULT_DNS_FREQUENCY_MINUTES=360
DEFAULT_SSL_FREQUENCY_MINUTES=60
DEFAULT_SECURITY_FREQUENCY_MINUTES=60

# HTTP Client
HTTP_TIMEOUT_SECONDS=10
HTTP_MAX_REDIRECTS=3
HTTP_USER_AGENT=WebGuard/1.0 (+https://webguard.io)

# Telemetry
RUST_LOG=info,web_guard=debug
ENABLE_TRACING=true
ENABLE_METRICS=true

# Webhook Defaults
WEBHOOK_TIMEOUT_SECONDS=5
WEBHOOK_RETRY_ATTEMPTS=3
